<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/srcGroupIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source Group Id"
        app:layout_constraintBottom_toTopOf="@id/dstGroupIdLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/srcGroupIdText"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/srcGroupIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:inputType="text"
        android:labelFor="@id/srcGroupIdLabel"
        app:layout_constraintBottom_toBottomOf="@id/srcGroupIdLabel"
        app:layout_constraintLeft_toRightOf="@id/srcGroupIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dstGroupIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Group Id"
        app:layout_constraintBottom_toTopOf="@id/userIdLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dstGroupIdText"
        app:layout_constraintTop_toBottomOf="@id/srcGroupIdLabel" />

    <AutoCompleteTextView
        android:id="@+id/dstGroupIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:inputType="text"
        android:labelFor="@id/dstGroupIdLabel"
        app:layout_constraintBottom_toBottomOf="@id/dstGroupIdLabel"
        app:layout_constraintLeft_toRightOf="@id/dstGroupIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/srcGroupIdText" />

    <TextView
        android:id="@+id/userIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/userIdText"
        app:layout_constraintTop_toBottomOf="@id/dstGroupIdLabel" />

    <AutoCompleteTextView
        android:id="@+id/userIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:inputType="text"
        android:labelFor="@id/userIdLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/userIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dstGroupIdText" />

</android.support.constraint.ConstraintLayout>